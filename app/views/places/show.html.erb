<div class ="container">
<h1><%= @place["name"] %></h1>
    <p>
      <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary btn-lg active" role="button">New Entry</a>
    </p>

<h2>My Entries</h2>

<div class="row">
  <% for entry in @entries %>
    <div class="col-sm-6 col-md-3">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
      <%if entry.uploaded_image.attached? %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <%end%>
    </div>
  <% end %>
</div>
  <p>
    <a href="/places">Back to All Places</a>
  </p>
</div>